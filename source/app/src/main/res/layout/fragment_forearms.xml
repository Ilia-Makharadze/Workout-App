<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F0FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Barbell Bench Press Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/container_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barbell Overhead Press"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/plankass"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"
                android:contentDescription="Barbell Bench Press" />

            <!-- Bench Steps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Step 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Take a roughly shoulder width grip. There should be a straight line from your elbow to fist (vertical forearms)."
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Step 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Pull your chin back and press the weight toward the ceiling by extending at the elbow joint and flexing at the shoulder joint.Press until your elbows are extended and push your head forward slightly."
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Step 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Return to the start position with control. Pulling your chin back to allow the bar to pass your face safely."
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Push Up Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/container_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dumbbell Seated Overhead Press"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pushUpView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"
                android:contentDescription="Push Up" />

            <!-- Push Up Steps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Step 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sit on a bench with back support. Raise the dumbbells to shoulder height with your palms forward."
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Step 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Raise the dumbbells upwards and pause at the contracted position"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Step 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lower the weights back to starting position."
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!-- Push Up Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/container_bg"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dumbbell Incline Bench Press"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dumbbellInclineChestFlys"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"
                android:contentDescription="Push Up" />

            <!-- Push Up Steps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Step 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lay flat on the incline bench with your feet on the ground. Raise the dumbbells until you have straight arms."
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Step 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lower the dumbbells to your mid chest"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Step 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_bg"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Raise the dumbbells until you've locked your elbows."
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
